            android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.androidshortcuts"
            android:targetClass="com.example.androidshortcuts.ShowPayCodeActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:shortcutId="other"
        android:enabled="true"
        android:icon="@drawable/ic_other"
        android:shortcutShortLabel="@string/shortcut_other_short"
        android:shortcutLongLabel="@string/shortcut_other_long">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.androidshortcuts"
            android:targetClass="com.example.androidshortcuts.OtherActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>
